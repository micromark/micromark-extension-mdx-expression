{
  "include": [
    "**/*.js",
    "packages/micromark-extension-mdx-expression/dev/index.d.ts",
    "test/complex-types.d.ts"
  ],
  "exclude": [
    "**/coverage/",
    "**/node_modules/",
    "packages/*/lib/",
    "packages/*/index.js"
  ],
  "compilerOptions": {
    "customConditions": ["development"],
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "node16",
    "newLine": "lf",
    "strict": true,
    "target": "es2020"
  }
}
